<schema version="0.2">
	<!--
	 *
	 * TABLE slider
	 *
	 -->
	<table name="slider">
		<field name="slider_content_id" type="I8">
			<KEY/>
			<AUTOINCREMENT/>
		</field>
		<field name="context_id" type="I8">
			<NOTNULL/>
		</field>		
		<field name="name" type="C2" size="255">
			<NOTNULL/>
		</field>
		<field name="content" type="X">
			<NOTNULL/>
		</field>		
		<field name="sequence" type="I8">
			<NOTNULL/>
		</field>
		<field name="show_content" type="I8">
			<NOTNULL/>
		</field>		
		<descr>Content for slider</descr>
	</table>
</schema>

